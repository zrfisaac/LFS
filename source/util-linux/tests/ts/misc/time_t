TS_TOPDIR="${0%/*}/../.."
TS_DESC="time_t size"

. "$TS_TOPDIR"/functions.sh
ts_init "$*"

ts_check_test_command "$TS_HELPER_SYSINFO"
[ -n "$UL_ALLOW_32BIT_TIME" ] && ts_skip "32bit time allowed"

"$TS_HELPER_SYSINFO" 'sz(time_t)' >> "$TS_OUTPUT"

ts_finalize
